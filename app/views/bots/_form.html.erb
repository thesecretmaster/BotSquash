<%= form_with(model: bot, local: true) do |form| %>
  <% if bot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bot.errors.count, "error") %> prohibited this bot from being saved:</h2>

      <ul>
      <% bot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= form.label :username %>
    <%= form.text_field :username, class: 'form-control' %>
  </div>

  <div class='field'>
    <%= form.label :type_id %>
    <%= form.select :type_id, options_with_colors(Bot::Type.all, :id, :name){ |bot| bot.status_color(prefix: 'bg') }, {}, class: 'form-control select2' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
