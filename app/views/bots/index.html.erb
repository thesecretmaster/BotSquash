<h1>Bots</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Username</th>
      <th>Hashtags</th>
      <th>Network IDs</th>
      <th>Timeline</th>
    </tr>
  </thead>

  <tbody>
    <% @bots.each do |bot| %>
      <tr data-bot-id="<%= bot.id %>">
        <td>
          <%= link_to edit_bot_path(bot), class: 'js-modal-trigger', data: { toggle: 'modal', target: '#editBotModal', username: bot.username,
                                                                             type_id: bot.type_id, bot_id: bot.id } do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %>
          &nbsp;
          <%= link_to bot.username, bot_path(bot), data: { toggle: 'modal', target: '#botInfoModal', username: bot.username, type_id: bot.type_id,
                                                           type: bot.type.name, bot_id: bot.id, twttr: bot.twitter_username },
                      class: "#{bot.status_color} js-modal-trigger" %>
        <td>
          <span class="id-list">
            <%= number_ids_for(bot.hashtags, modal_name: '#hashtagModal') { |ht| {id: ht.id, name: ht.name} } %>
          </span>
          <%= link_to '+add', new_hashtag_path(bot: bot), data: { toggle: 'modal', target: '#newHashtagModal', bot_id: bot.id },
                      class: 'js-modal-trigger' %>
        </td>
        <td>
          <span class="id-list">
            <!-- <%= true || raw(bot.networks.map { |nw| link_to "##{nw.id}", nw }.join(', ')) %> -->
            <%= number_ids_for(bot.networks, modal_name: '#networkModal') { |nw| {id: nw.id, name: nw.name} } %>
          </span>
          <%= link_to '+add', new_network_membership_path(bot: bot), data: { toggle: 'modal', target: '#newNetworkMembershipModal', bot_id: bot.id },
              class: 'js-modal-trigger' %>
        </td>
        <td>
          <%= link_to "actions", bot_timeline_path(bot), data: { toggle: 'modal', target: '#actionsModal', bot_id: bot.id },
                      class: 'js-modal-trigger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Really, these modals should `render` from other pages -->

<%= render 'modal', title: "Edit Bot", id: "editBotModal" do %>
  <%= render 'form', form_options: { remote: true, authenticity_token: true, id: 'editBotModalForm' },
             path: update_bot_path(format: :json), submit_btn: false %>
<% end %>

<%= render 'modal', title: "Bot Info", id: "botInfoModal", submit_btn: false do %>
  <p>Username: <span class="username"></span></p>
  <!-- TODO: Fetch this data async -->
  <p>Type: <span class="type"></span></p>
  <p>Hashtags: <span class="hashtags"></span></p>
  <p>Networks: <span class="networks"></span></p>
  <div class="tweet-container">
  </div>
<% end %>

<%= render 'modal', title: "Create Hashtag", id: "newHashtagModal" do %>
  <%= render 'hashtags/form', form_options: { remote: true, authenticity_token: true, id: 'newHashtagModalForm' },
             path: add_hashtag_to_bot_path(format: :json), submit_btn: false, can_add_existing: true %>
<% end %>

<%= render 'modal', title: "Create Nework Membership", id: "newNetworkMembershipModal" do %>
  <%= render 'networks/form', form_options: { remote: true, authenticity_token: true, id: 'newNetworkMembershipModalForm' },
             path: add_network_to_bot_path(format: :json), submit_btn: false, can_add_existing: true %>
<% end %>

<%= render 'modal', title: "Hashtag!", id: "hashtagModal", submit_btn: false do %>
  <p>Name: <span class="name"></span></p>
  <p>Id: <span class="id"></span></p>
<% end %>

<%= render 'modal', title: "Network!", id: "networkModal", submit_btn: false do %>
  <p>Name: <span class="name"></span></p>
  <p>Id: <span class="id"></span></p>
<% end %>

<%= render 'modal', title: "Actions!", id: "actionsModal", submit_btn: false do %>
  <div class="actions">
  </div>
<% end %>
